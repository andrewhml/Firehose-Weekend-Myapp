<div class="row-fluid boxy text-center">
	<div class="span4 offset4">
	<h1>Upload a New Picture</h1>
	</div>

</div>
<div class="row-fluid">
	<div class="formbox span4 offset4">
	<%= simple_form_for @pic do |f| %>
			<div class="control-group">
			<%= f.input :hour, placeholder: "When did this go down?" %>
			<%= f.input :image, :as => :file, placeholder: "Upload your pic."%>
			<%= f.input :emotion, placeholder: "How did you feel?" %>
			<%= f.input :learned, placeholder: "What were you doing?" %>

			<%= submit_tag nil, :class => 'btn btn-large btn-block' %>
			</div>

		<% end %>
	</div>
</div>